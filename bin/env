#!/usr/bin/bash

CMD=$1
[ ! -z "$CMD" ] || CMD=start
systemctl $CMD httpd
systemctl $CMD mongodb


if [ "$CMD" == 'start' ]; then
    DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
    cd $DIR
    cd ../alcarin-gameplay-server/src
    nodemon -I index.coffee &>> /var/log/httpd/alcarin.loc-gameplay_server_log &
fi
if [ "$CMD" == 'stop' ]; then
    sudo pkill -f .*nodemon.*
fi
