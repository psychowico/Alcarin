{% extends "admin-layout" %}

{% block content %}
<div class="map-editor" data-instance="Alcarin.Orbis.Editor.Editor">
    <div class="row">
        <div class="span6">
            <h2>Map Editor</h2>

            <div class="map-viewport">
                <div class="top">
                    <button data-diff-y="-0.1" class="btn btn-block btn-inverse top10">
                        <i class="icon-chevron-up"></i>
                    </button>
                    <button data-diff-y="-0.4" class="btn btn-block btn-inverse top40">
                        <i class="icon-chevron-up"></i>
                        <i class="icon-chevron-up"></i>
                    </button>
                    <button data-diff-y="-1" class="active-link btn btn-block btn-inverse top100">
                        <i class="icon-chevron-up"></i>
                        <i class="icon-chevron-up"></i>
                        <i class="icon-chevron-up"></i>
                    </button>
                </div>

                <div class="right">
                    <button data-diff-x="0.1" class="btn btn-block btn-inverse right10">
                        <i class="icon-chevron-right"></i>
                    </button>
                    <button data-diff-x="0.4" class="btn btn-block btn-inverse right40">
                        <i class="icon-chevron-right"></i>
                        <i class="icon-chevron-right"></i>
                    </button>
                    <button data-diff-x="1" class="btn btn-block btn-inverse right100">
                        <i class="icon-chevron-right"></i>
                        <i class="icon-chevron-right"></i>
                        <i class="icon-chevron-right"></i>
                    </button>
                </div>

                <div class="bottom">
                    <button data-diff-y="0.1" class="btn btn-block btn-inverse bottom10">
                        <i class="icon-chevron-down"></i>
                    </button>
                    <button data-diff-y="0.4" class="btn btn-block btn-inverse bottom40">
                        <i class="icon-chevron-down"></i>
                        <i class="icon-chevron-down"></i>
                    </button>
                    <button data-diff-y="1" class="btn btn-block btn-inverse bottom100">
                        <i class="icon-chevron-down"></i>
                        <i class="icon-chevron-down"></i>
                        <i class="icon-chevron-down"></i>
                    </button>
                </div>

                <div class="left">
                    <button data-diff-x="-0.1" class="btn btn-block btn-inverse left10">
                        <i class="icon-chevron-left"></i>
                    </button>
                    <button data-diff-x="-0.4" class="btn btn-block btn-inverse left40">
                        <i class="icon-chevron-left"></i>
                        <i class="icon-chevron-left"></i>
                    </button>
                    <button data-diff-x="-1" class="btn btn-block btn-inverse left100">
                        <i class="icon-chevron-left"></i>
                        <i class="icon-chevron-left"></i>
                        <i class="icon-chevron-left"></i>
                    </button>
                </div>

                <div class="canvas-container">
                    <canvas width="500" height="500">
                        You browser don't support canvas, can not continue.
                    </canvas>
                </div>
            </div>
        </div>
        <div class="span6">
            <h2>Toolbar</h2>
            <div class="toolbar">
                <div class="brushes">
                    <h4>Current brush</h4>
                    <div class="well well-inverse current">
                        <div class="row-fluid">
                            <div class="span2">
                                <a href="#" class="brush-color color-picker" data-color="rgb(0, 128, 0)" data-color-format="rgb">
                                </a>
                            </div>
                            <div class="span7 size">
                                <label>Size:</label>
                                <div class="slider"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="alert alert-error hide">
                    You have unsaved changes!
                    <button type="button" class="close">&times;</button>
                    <button class="btn btn-inverse btn-block">
                        Save changes
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}