{% extends "common-layout" %}

{% do headLink().appendBundle('player') %}
{% do headScript().appendBundle('player') %}

{% block title %}
    {{ headTitle('Alcarin') }}
{% endblock %}

{% block content %}
    <div ng-app="{% block ngapp '' %}">
        <section id="game-pages" class="left-container">
            <div class="pages">
                <div class="pages-container">
                    {% block leftcontent %}
                    {% endblock %}
                </div>
            </div>
        </section>

        {% block middlecontent %}
        {% endblock %}

        <section id="game-events" class="right-container">
            <div class="events">
                <div class="events-container">
                    {% block rightcontent %}
                    {% endblock %}
                </div>
            </div>
        </section>

        <div style="clear: both"></div>
    </div>

{% endblock %}